<div class="container">
  <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin" } do |f| %>
      <h2 class="form-signin-heading">Account Settings</h2>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :first, placeholder: "First", class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.text_field :last, placeholder: "Last", class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email Address", class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.text_field :phone, placeholder: "Phone Number", class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.text_field :job_title, placeholder: "Job Title", class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password", class: 'form-control', autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: 'form-control', autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>

    <br>
    <p><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
