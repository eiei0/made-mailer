<div class="container">
  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" } do |f| %>
    <div class="logo-signin">
      <%= link_to image_tag("made-logo-dark.png"), root_path %>
    </div>

    <h2 class="form-signin-heading">Create an account</h2>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.text_field :first, placeholder: "First", class: 'form-control', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.text_field :last, placeholder: "Last", class: 'form-control', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email Address", class: 'form-control', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", class: 'form-control', autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: 'form-control', autocomplete: "off" %>
    </div>

    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>

    <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
    <%= render "devise/shared/links" %>
  <% end %>

</div>
