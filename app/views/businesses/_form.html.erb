<%= form_for @business, url: businesses_path, method: :post, html: { class: "form-horizontal business" } do |f| %>
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.label :company_name, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :company_name, placeholder: "Enter Business Name...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :email, placeholder: "Enter Business Email Address...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :first, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :first, placeholder: "Enter First Name of Business Contact...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :last, placeholder: "Enter Last Name of Business Contact...", class: 'form-control' %>
      </div>
    </div>
    <% if f.object.class == BusinessForm %>
      <%= render partial: "delivery_options", locals: { f: f } %>
    <% end %>
  </div>
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.label :address, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :address, placeholder: "Enter Business Street Address...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :city, placeholder: "Enter a City...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :state, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :state, placeholder: "Enter a State...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :postal_code, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :postal_code, placeholder: "Enter a Postal Code...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :country, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :country, placeholder: "Enter a Country...", class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-1 col-lg-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to "Cancel", businesses_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
<% end %>
