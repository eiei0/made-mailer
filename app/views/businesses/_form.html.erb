  <div class="col-lg-6">
    <div class="form-group">
      <%= f.label :company_name, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :company_name, placeholder: "Enter Business Name...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :email, placeholder: "Enter Business Email Address...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :first, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :first, placeholder: "Enter First Name of Business Contact...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :last, placeholder: "Enter Last Name of Business Contact...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :website, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :url, placeholder: "Enter Last Name of Business Contact...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :phone, placeholder: "Enter Phone Number of Business Contact...", class: 'form-control' %>
      </div>
    </div>
    <% if f.object.class == BusinessForm %>
      <%= render partial: "delivery_options", locals: { f: f } %>
    <% end %>
  </div>
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.label :status, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.select :status, options_for_select(Business.statuses.keys.map(&:titleize), selected: f.object.status.try(:titleize)), { include_blank: true, class: 'form-control' } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address_one, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :address_1, placeholder: "Enter Business Street Address...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address_two, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :address_2, placeholder: "Apartment, suite, unit, building, floor, etc...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :city, placeholder: "Enter a City...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :state, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :state, placeholder: "Enter a State...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :zip, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :postal_code, placeholder: "Enter a Postal Code...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :country, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_field :country, placeholder: "Enter a Country...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :notes, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_area :notes, placeholder: "Enter any notes about the Business...", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :connection_point, class: 'control-label col-lg-2' %>
      <div class="col-lg-8">
        <%= f.text_area :connection_point, placeholder: "Enter a connection point...", class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-1 col-lg-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to "Cancel", businesses_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
